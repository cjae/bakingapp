<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/frame_padding"
    android:paddingLeft="@dimen/frame_padding"
    android:background="@color/app_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dreammesh.app.bakingapp.ui.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <ProgressBar
        android:id="@+id/baking_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/list_baking_empty"
        android:text="@string/empty_baking_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="@dimen/baking_error_size"
        android:textColor="@color/app_black"
        android:paddingRight="@dimen/frame_padding"
        android:paddingEnd="@dimen/frame_padding"
        android:paddingLeft="@dimen/frame_padding"
        android:paddingStart="@dimen/frame_padding"
        android:paddingTop="@dimen/frame_padding"
        android:paddingBottom="@dimen/frame_padding" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/baking_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"/>
</FrameLayout>
